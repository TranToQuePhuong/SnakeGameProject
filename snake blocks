void main()
{
int i,j,height,width;
printf("Enter the size of block <height,width>:");
scanf("%d""%d",&height,&width);
for (i=0;i<=height;i++){
    for (j=0;j<=width;j++){
        if (i==0||i==height){
            printf("+ ");}
        else{
            if(j==0||j==width)
            printf("+ ");
            else
                printf("  ");}}

    printf("\n");
}
            printf("GAME START! \t\t\t Score:");
}

